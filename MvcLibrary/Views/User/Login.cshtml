<body>
    <h1 class="display-4">Login</h1>

    <form method="post">
        Login: <input type="text" id="username" name="username" /> <br />
        Password: <input type="password" id="password" name="password" /> <br />
        <input type="submit" value="Submit" asp-page-handler="Submit" />
        @ViewData["LoginResult"]
    </form>


    <form method=“post” class=“form-container”>
        <div class=“form-input”> <label for=“username”>Login:</label> <input type=“text” id=“username”
                name=“username” />
        </div>
        <div class=“form-input”> <label for=“password”>Password:</label> <input type=“password” id=“password”
                name=“password” /> </div>
        <div class=“form-submit”> <input type=“submit” value=“Submit” asp-page-handler=“Submit” /> </div>
        @ViewData["LoginResult"]
    </form>
</body>